WITH premiere(categorie)
AS
(SELECT COUNT(USER_ID) FROM ORDERS
JOIN  PRODUCTS ON orders.PRODUCT_ID=PRODUCTS.ID
WHERE PRODUCTS.CATEGORY='Gizmo'),
second(categorie)
AS
(SELECT COUNT(USER_ID) FROM ORDERS
JOIN  PRODUCTS ON orders.PRODUCT_ID=PRODUCTS.ID
WHERE PRODUCTS.CATEGORY='Doohickey'),
troisieme(categorie)
AS
(SELECT COUNT(USER_ID) FROM ORDERS
JOIN  PRODUCTS ON orders.PRODUCT_ID=PRODUCTS.ID
WHERE PRODUCTS.CATEGORY='Gadget'),
quatrieme(categorie)
AS
(SELECT COUNT(USER_ID) FROM ORDERS
JOIN  PRODUCTS ON orders.PRODUCT_ID=PRODUCTS.ID
WHERE PRODUCTS.CATEGORY='Widget')
